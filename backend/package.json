{
  "name": "news-genie-backend",
  "version": "1.0.0",
  "scripts": {
    "lint": "pylint **/*.py",
    "lint:fix": "black . && autopep8 --in-place --recursive .",
    "format": "black . --exclude 'myenv|node_modules|.mypy_cache|package-lock.json|package.json' && prettier --write .",
    "format:check": "prettier --check . && black --check . --exclude 'myenv|node_modules|.mypy_cache|package-lock.json|package.json'"
  },
  "dependencies": {
    "mongoose": "^8.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "prettier": "^3.3.3"
  }
}
